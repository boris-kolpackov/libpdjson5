   27,  1: }
  EOO

  : mixed
  :
  $* <<EOI >>EOO
  //x
  /*x*/{//x
    /*x*/"a": 123,/*x*///x
    /*x*/"b": "abc", /*x*/ //x
    /*x*/"c": [1, 2],// /*
    /*x*/"d": {"x": true}/*x*/
  //x
  //x
  /*x
    y*/}//x
  //x
  /*x*/
  //x
  EOI
    2,  6: {
    3,  8:   a
    3, 13:   123
    4,  8:   b
    4, 13:   "abc"
    5,  8:   c
    5, 13:   [
    5, 14:     1
    5, 17:     2
    5, 18:   ]
    6,  8:   d
    6, 13:   {
    6, 14:     x
    6, 19:     <true>
    6, 23:   }
   10,  6: }
  EOO

  : streaming
  :
  $* --streaming <<EOI >>EOO
  1/* comment */2
  /*comment*/
  3// comment
  4
  /*comment*///comment
  /*comment*/
  /**/5
  EOI
    1,  1: 1
    1, 15: 2
    3,  1: 3
    4,  1: 4
    7,  5: 5
  EOO

  : line-dangling
  :
  $* <:'2//x' >>EOO
    1,  1: 2
  EOO

  : block-dangling
  :
  $* <<EOI 2>>EOE !=0
  /*/ 2
  EOI
  <stdin>:2:0: error: unexpected end of text before '*/'
  EOE
}}
