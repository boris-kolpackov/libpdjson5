test.options = --json5

: number
:
{{
  : plus
  :
  $* <'+123' >'  1,  1: +123'

  : plus-alone
  :
  $* <'+ 123' 2>>EOE !=0
  <stdin>:1:2: error: unexpected byte ' ' in number
  EOE

  : hex
  :
  $* --streaming <<EOI >>EOO
  0x00
  0XdeCAFF
  -0xff
  +0xEE
  EOI
    1,  1: 0x00
    2,  1: 0XdeCAFF
    3,  1: -0xff
    4,  1: +0xEE
  EOO

  : hex-prefix-only
  :
  $* <:'0x' 2>>EOE !=0
  <stdin>:1:2: error: expected hex digit instead of end of text
  EOE

  : hex-bad-digit
  :
  $* <'0xG' 2>>EOE !=0
  <stdin>:1:2: error: expected hex digit instead of byte 'G'
  EOE

  : infinity
  :
  $* --streaming <<EOI >>EOO
  Infinity
  -Infinity
  +Infinity
  EOI
    1,  1: Infinity
    2,  1: -Infinity
    3,  1: +Infinity
  EOO

  : infinity-bad
  :
  $* <<EOI 2>>EOE !=0
  -Infinty
  EOI
  <stdin>:1:7: error: expected 'i' instead of byte 't'
  EOE

  : nan
  :
  $* --streaming <<EOI >>EOO
  NaN
  -NaN
  +NaN
  EOI
    1,  1: NaN
    2,  1: -NaN
    3,  1: +NaN
  EOO

  : nan-bad
  :
  $* <<EOI 2>>EOE !=0
  -Nan
  EOI
  <stdin>:1:4: error: expected 'N' instead of byte 'n'
  EOE
}}

: escape
:
{{
  : basics
  :
  $* --streaming <<EOI >>"EOO"
  "\n"
  '\''
  "\x5c"
  "a\
  b"
  "\A\C/\D\C"
  EOI
    1,  1: "$\n"
    2,  1: "'"
    3,  1: "\\"
    4,  1: "ab"
    5,  1: "AC/DC"
  EOO

  : pass-control
  :
  $* <"'$\b\\$\b'" >"  1,  1: \"$\b$\b\""

  : crlf-line-continuation
  :
  $* <"'a\\$\r$\nb'" >>EOO
    1,  1: "ab"
  EOO

  : digit
  :
  $* <'"\1"' 2>>EOE !=0
  <stdin>:1:3: error: invalid escaped byte '1'
  EOE

  : digit-after-zero
  :
  $* <'"\01"' 2>>EOE !=0
  <stdin>:1:4: error: invalid escaped byte '1'
  EOE
}}

: single-quoted
:
{{
  : basics
  :
  $* <<EOI >>EOO
  {
    'foo "fox" bar': 'bar "baz" foo'
  }
  EOI
    1,  1: {
    2,  3:   foo "fox" bar
    2, 20:   "bar "baz" foo"
    3,  1: }
  EOO

  : unterminated
  :
  $* <:"'foo\"" 2>>EOE !=0
  <stdin>:1:5: error: unterminated string literal
  EOE
}}

: unquoted
:
{{
  : basics
  :
  $* <<EOI >>EOO
  {
    foo: 1,
    FOO: 2,
    foo1: 3,
    foo_bar_1: 4,
    _: 5,
    _foo: 6,
    _123: 7
  }
  EOI
    1,  1: {
    2,  3:   foo
    2,  8:   1
    3,  3:   FOO
    3,  8:   2
    4,  3:   foo1
    4,  9:   3
    5,  3:   foo_bar_1
    5, 14:   4
    6,  3:   _
    6,  6:   5
    7,  3:   _foo
    7,  9:   6
    8,  3:   _123
    8,  9:   7
    9,  1: }
  EOO

  : invalid
  :
  $* <<EOI >>EOO 2>>EOE !=0
  {
    1foo: 1
  }
  EOI
    1,  1: {
  EOO
  <stdin>:2:3: error: expected member name
  EOE
}}

: comma
:
{{
  : array
  :
  $* <<EOI >>EOO
  [
    1,
    2,
  ]
  EOI
    1,  1: [
    2,  3:   1
    3,  3:   2
    4,  1: ]
  EOO

  : array-empty
  :
  $* <<EOI >>EOO 2>>EOE !=0
  [
    ,
  ]
  EOI
    1,  1: [
  EOO
  <stdin>:2:3: error: unexpected byte ',' in value
  EOE

  : object
  :
  $* <<EOI >>EOO
  {
    "foo": 1,
    "bar": 2,
  }
  EOI
    1,  1: {
    2,  3:   foo
    2, 10:   1
    3,  3:   bar
    3, 10:   2
    4,  1: }
  EOO

  : object-empty
  :
  $* <<EOI >>EOO 2>>EOE !=0
  {
    ,
  }
  EOI
    1,  1: {
  EOO
  <stdin>:2:3: error: expected member name
  EOE

  : object-after-name
  :
  $* <<EOI >>EOO 2>>EOE !=0
  {
    "foo" ,
  }
  EOI
    1,  1: {
    2,  3:   foo
  EOO
  <stdin>:2:9: error: expected ':' after member name
  EOE
}}

