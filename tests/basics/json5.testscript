    /*x*/
    /*x*/"c"/*x*/:/*x*/ [/*x*/1/*x*/,/*x*/2/*x*/]/*x*/,/*x*/
    /*x*/
    /*x*/"d"/*x*/:/*x*/{/*x*/"x"/*x*/:/*x*/true/*x*/}/*x*/
  /*x*//*x*/
  /*x*/}/*x*/
  /*x*/
  /*x*/
