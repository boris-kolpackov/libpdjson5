    //x
    ]//x
    //x
    ,//x
    //x
    "d"//x
    //x
    ://x
    //x
    {//x
    "x" : true}//x
  //x
  }//x
  //x
  //x
  EOI
    3,  1: {
    5,  3:   a
    5,  8:   123
    6,  3:   b
    6,  8:   "abc"
    7,  3:   c
    9,  3:   [
   11,  5:     1
